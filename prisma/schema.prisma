datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String 
    createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  description String
  price Int
  categoryId String @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

